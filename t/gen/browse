use warnings;
use strict;

use Net::Amazon;

my $ua = Net::Amazon->new(
    token         => $ENV{AMAZON_TOKEN},
    response_dump => 1,
    max_pages     => 1,
);

my $resp = $ua->search(
    browsenode => 4025,
    mode       => "books",
    keywords   => "course",
);

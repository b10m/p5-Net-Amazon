use warnings;
use strict;

use Net::Amazon;

my $ua = Net::Amazon->new(
    token         => $ENV{AMAZON_TOKEN},
    response_dump => 1,
);

my $resp = $ua->search(
    power         => 'author: randal schwartz and author: tom phoenix',
    mode          => 'books',
    sort          => 'pricerank',
);

#!/usr/bin/perl
###########################################
use warnings;
use strict;

use Net::Amazon;

my $ua = Net::Amazon->new(
    token         => $ENV{AMAZON_TOKEN},
    secret_key    => $ENV{AMAZON_SECRET_KEY},
    response_dump => 1, 
);

my $resp = $ua->search(
    upc  => '093624843627',
    mode => 'music',
);

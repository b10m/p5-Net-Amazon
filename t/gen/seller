#!/usr/bin/perl
###########################################
use warnings;
use strict;

use Net::Amazon;
use Log::Log4perl qw(:easy);
Log::Log4perl->easy_init($DEBUG);


my $ua = Net::Amazon->new(
    associate_tag => $ENV{AMAZON_ASSOCIATE_TAG},
    token         => $ENV{AMAZON_TOKEN},
    secret_key    => $ENV{AMAZON_SECRET_KEY},
    response_dump => 1, 
);


my $resp = $ua->search(
    seller => 'A4G8XK4HCZ00J',
);

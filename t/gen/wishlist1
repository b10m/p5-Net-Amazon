#!/usr/bin/perl
############################################################
# wishlist wishlist_id
# Mike Schilli <mschilli1@aol.com>, 2003
############################################################

use strict;
use warnings;

use Net::Amazon;
use Net::Amazon::Request::Wishlist;

my $ua = Net::Amazon->new(
    token         => $ENV{AMAZON_TOKEN},
    response_dump => 1,
);

my $req = Net::Amazon::Request::Wishlist->new(
    id  => '1XL5DWOUFMFVJ',
);

my $resp = $ua->request($req);
